    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Editor/bin/Debug/net6.0-windows/Editor.dll",
            "args": [
                "${env:GLTF_SAMPLE_MODELS}/2.0/Avocado/glTF-Binary/Avocado.glb",
            ],
            "cwd": "${workspaceFolder}/Editor",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}